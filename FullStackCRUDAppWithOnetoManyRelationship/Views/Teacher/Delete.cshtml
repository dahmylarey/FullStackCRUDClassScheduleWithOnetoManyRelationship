@using FullStackCRUDAppWithOnetoManyRelationship.Models.DomainModels;
using Microsoft.AspNetCore.Mvc;
@model Teacher

@{
    ViewBag.Title = "Delete Teacher";
}

<h1 class="display-4">@ViewBag.Title</h1>

<ul class="list-group mb-2">
    <li class="list-group-item">
        @Model.FullName
    </li>
</ul>

<form asp-action="Delete" method="post">
    <input asp-for="TeacherId" type="hidden" />
    <button type="submit" class="btn btn-dark">Delete</button>
    <a asp-action="Index" asp-controller="Teacher" class="btn-outline-dark">Cancel</a>
</form>